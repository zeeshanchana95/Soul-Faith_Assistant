<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QiblaDirection">

    <ImageView
        android:id="@+id/qibla_blue_img"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:scaleType="fitXY"
        android:src="@drawable/qibla_blue"
        app:layout_constraintBottom_toTopOf="@+id/imgCompass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgCompass"
        android:layout_width="373dp"
        android:layout_height="457dp"
        android:layout_marginBottom="74dp"
        android:contentDescription="Compass Needle"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>